{
    "id": "com.versionchecker",
    "version": "4.0.1",
    "compatibility": ">=5.0.0",
    "sdk": 3,
    "brandColor": "#FF7D4B",
    "name": {
        "en": "App Version Checker"
    },
    "description": {
        "en": "Check for app updates in the Athom store"
    },
    "category": [
        "internet"
    ],
    "platforms": [ "local" ],
    "permissions": [
        "homey:manager:api"
    ],
    "images": {
        "large": "/assets/images/large.jpg",
        "small": "/assets/images/small.jpg"
    },
    "author": {
        "name": "Adrian Rockall",
        "email": "ady@rockall.plus.com"
    },
    "bugs": {
        "url": "https://github.com/AdyRock/com.community.store/issues"
    },
    "source": "https://github.com/AdyRock/com.community.store",
    "api": {
        "CheckNow": {
            "method": "post",
            "path": "/CheckNow/"
        },
        "SetTime": {
            "method": "post",
            "path": "/SetTime/"
        }
    },
    "flow": {
        "triggers": [
            {
                "id": "update_available",
                "title": {
                    "en": "An update is available"
                },
                "tokens": [
                    {
                        "name": "update_app_name",
                        "type": "string",
                        "title": {
                            "en": "App Name"
                        },
                        "example": "Name of the app that has an update"
                    },
                    {
                        "name": "update_app_old_ver",
                        "type": "string",
                        "title": {
                            "en": "Old Version"
                        },
                        "example": "0.0.3"
                    },
                    {
                        "name": "update_app_new_ver",
                        "type": "string",
                        "title": {
                            "en": "New Version"
                        },
                        "example": "0.0.4"
                    }
                ]
            }
        ]
    }
}