{
  "id": "com.community.store",
  "version": "0.0.6",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "brandColor": "#FF7D4B",
  "name": {
    "en": "Community Store Checker",
    "nl": "Community Store Checker"
  },
  "description": {
    "en": "Check for app updates in the community store and Athom store"
  },
  "category": [
    "internet"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Adrian Rockall",
    "email": "ady@rockall.plus.com"
  },
  "bugs": {
    "url": "https://github.com/AdyRock/com.community.store/issues"
  },
  "source": "https://github.com/AdyRock/com.community.store",
  "flow": {
    "triggers": [
      {
        "id": "update_available",
        "title": {
          "en": "An update is available"
        },
        "tokens": [
          {
            "name": "update_app_name",
            "type": "string",
            "title": {
              "en": "App Name"
            },
            "example": "Community Store Checker"
          },
          {
            "name": "update_app_store",
            "type": "string",
            "title": {
              "en": "Store"
            },
            "example": "Community Store"
          },
          {
            "name": "update_app_old_ver",
            "type": "string",
            "title": {
              "en": "Old Version"
            },
            "example": "0.0.3"
          },
          {
            "name": "update_app_new_ver",
            "type": "string",
            "title": {
              "en": "New Version"
            },
            "example": "0.0.4"
          }
        ]
      }
    ]
  }
}